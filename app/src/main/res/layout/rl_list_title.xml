<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    app:divider="@drawable/linearlayout_compat"
    app:showDividers="end">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_list_margin_left"
            android:drawableLeft="@mipmap/icon_htitle_yinshi"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/about"
            android:textColor="@color/grey900"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_list_margin_left"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/icon_or_arrow"
            android:text="@string/more"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"/>
    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>
