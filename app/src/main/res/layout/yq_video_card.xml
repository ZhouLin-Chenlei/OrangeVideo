<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="52dp"
        android:layout_marginTop="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <ImageView
                android:layout_width="128dp"
                android:layout_height="96dp"
                android:id="@+id/iv_groupcover"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/grey200"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_twotitle"
                android:layout_toLeftOf="@id/iv_groupcover"
                android:layout_toStartOf="@id/iv_groupcover"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_title1"
                    android:lines="1"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/tv_title2"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_group_desc"
                android:layout_toLeftOf="@id/iv_groupcover"
                android:layout_toStartOf="@id/iv_groupcover"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/ll_twotitle"
                android:layout_marginTop="10dp"
                android:maxLines="4"
                android:textColor="#959595"
                android:textSize="13.5sp"
                android:ellipsize="end"
               />
            
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_more"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="@string/more"
                android:textColor="@color/colorPrimary"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/icon_or_arrow"/>

        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/label_videogroup_title">
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />
        <!--android:drawableLeft="@mipmap/icon_tv"
            android:drawablePadding="4dp"-->
    </FrameLayout>



</FrameLayout>

